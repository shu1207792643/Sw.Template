<mah:MetroWindow  xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="Sw.Template.Web.Views.EntranceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sw.Template.Web.Views"
        mc:Ignorable="d"
        Title="系统登录" Height="250" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="账号：" HorizontalAlignment="Left" Margin="42,43,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="88,42,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="169" Text="{Binding UserName}"/>
        <Label Content="密码：" HorizontalAlignment="Left" Margin="42,104,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="88,103,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="169" Text="{Binding UserPassword}"/>
        <Button Content="登录" HorizontalAlignment="Left" Margin="103,157,0,0" VerticalAlignment="Top" Width="110" Command="{Binding Entrance}" Height="37"/>
    </Grid>
</mah:MetroWindow>
